<% provide(:page_title, t('activerecord.models.condominium.index')) %>
<% provide(:head_title, t('activerecord.models.condominium.index')) %>



<div class=" text-right">
  <%= link_to  new_admins_condominium_path, 
              class: 'btn btn-secondary', 
              title: t('hints.condominium.new'), 
              data:{ toggle: 'tooltip', placement: 'top'} do%>
    <i class="fas fa-plus"></i>
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-data card-table table-vcenter text-nowrap">
    <thead>
      <tr>
        <th><%= t('activerecord.attributes.condominium.name') %></th>
        <th><%= t('activerecord.attributes.condominium.created_at')%> </th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @condominia.each do |condominium| %>
        <tr>
          <td><%= condominium.name %></td>
          <td><%= condominium.email %></td>
          <td><%= l(condominium.created_at, format: :long) %></td>

          <td>
          <%= link_to admins_condominium_path(condominium) do%>
            <span class="icon mr-3"><i class="fas fa-folder-open" 
            data-toggle="tooltip" data-placement="top" title=<%= t('hints.condominium.show')%>></i></span>
          <% end %>

          <%= link_to edit_admins_condominium_path(condominium) do%>
            <span class="icon mr-3"><i class="fas fa-edit"
            data-toggle="tooltip" data-placement="top" title= <%= t('hints.condominium.edit')%>> </i></span>
          <% end %>

          <%= link_to [:admins, condominium], method: :delete, data: { confirm: t('prompt.confirm')} do%>
            <span class="icon mr-3"><i class="fas fa-trash-alt"
            data-toggle="tooltip" data-placement="top" title=<%= t('hints.condominium.remove')%>></i></span>
          <% end %>
          </td>
          
          
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br   >

<div class="ui right floated pagination menu ">
 
</div>


